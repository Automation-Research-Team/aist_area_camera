<launch>

  <arg name="camera_type"	default="v4l2"/>
  <arg name="camera_array_name"	default="$(arg camera_type)_cameras"/>
  <arg name="max_skew"		default="0"/>
  <arg name="convert_to_rgb"	default="false"/>
  <arg name="rate"		default="100"/>
  <arg name="manager"		default=""/>
  <arg name="manager_threads"	default="4"/>

  <node if="$(eval manager == '')"
	name="$(arg camera_array_name)" pkg="aist_area_camera"
	type="$(arg camera_type)_camera" output="screen">
    <param name="max_skew"		value="$(arg max_skew)"/>
    <param name="convert_to_rgb"	value="$(arg convert_to_rgb)"/>
    <param name="rate"			value="$(arg rate)"/>
  </node>
  
  <node unless="$(eval manager == '')"
	name="$(arg camera_array_name)" pkg ="nodelet" type="nodelet"
  	args="load aist_area_camera/$(arg camera_type)_camera_nodelet
	      $(arg manager)">
    <param name="max_skew"		value="$(arg max_skew)"/>
    <param name="convert_to_rgb"	value="$(arg convert_to_rgb)"/>
    <param name="rate"			value="$(arg rate)"/>
  </node>

</launch>
